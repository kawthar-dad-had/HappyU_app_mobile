<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".StatistiqueFragment">




    <!-- Stress -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/dm_bold"
        android:text="Statistics of the month"
        android:textColor="@color/green_more_clair"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/legend_stress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="49dp">

        <View
            android:id="@+id/legend_color_stress"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:background="@color/stress" />

        <TextView
            android:id="@+id/legend_label_stress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stresse"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Tristesse -->
    <LinearLayout
        android:id="@+id/legend_tristesse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/legend_stress"
        app:layout_constraintTop_toTopOf="@+id/legend_stress"
        android:layout_marginStart="60dp">

        <View
            android:id="@+id/legend_color_tristesse"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/tristesse" />

        <TextView
            android:id="@+id/legend_label_tristesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tristesse"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Réussite -->
    <LinearLayout
        android:id="@+id/legend_reussite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/legend_stress"
        app:layout_constraintTop_toBottomOf="@+id/legend_stress"
        android:layout_marginTop="16dp">

        <View
            android:id="@+id/legend_color_reussite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/reussite" />

        <TextView
            android:id="@+id/legend_label_reussite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Réussite"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Bien-être -->
    <LinearLayout
        android:id="@+id/legend_bienetre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/legend_reussite"
        app:layout_constraintTop_toTopOf="@+id/legend_reussite"
        android:layout_marginStart="50dp">

        <View
            android:id="@+id/legend_color_bienetre"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/happiness" />

        <TextView
            android:id="@+id/legend_label_bienetre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happiness"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- PieChart -->
    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legend_bienetre"
        app:layout_constraintVertical_bias="0.196" />

    <!-- Button -->
    <Button
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Afficher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pie_chart" />

</androidx.constraintlayout.widget.ConstraintLayout>
